<freecast>
 	<node>
  		<peerprovider>
			<!-- specifies where the tracker lives -->
    		<trackeraddress>
    			<host>localhost</host>
    		</trackeraddress>
  		</peerprovider>
		<receiver>
			<class>peer</class>
   			<validator>
				<!-- validate the checksum of each packet, 
					must be compatible the root node checksum configuration -->
   				<class>digest</class>
   			</validator>
  		</receiver>
  		<players>
   			<player>
   				<!-- play the stream in the sound card -->
   				<class>audio</class>
   			</player>
   			<player>
   				<!-- accept http clients on the port 8001 -->
   				<class>http</class>
    			<listenaddress>
    				<port>8001</port>
    			</listenaddress>
   			</player>
  		</players>
	</node>
</freecast>
