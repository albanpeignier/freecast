<!-- 
	 FreeCast configuration file
	 visit http://www.freecast.org/userguide/node-configuration.html
-->
<freecast>
 	<node>
  		<peerprovider>
			<!-- specifies where the tracker lives -->
    		<trackeraddress>
    			<host>localhost</host>
    		</trackeraddress>
  		</peerprovider>
        <sender>
          <reference>
              <!-- to prevent problem with a reference assignated by a local tracker,
                determinate the public reference with the help of freecast.org -->
              <class>auto</class>
          </reference>
        </sender>
		<receiver>
			<!-- the nodes connects to the specified source stream server -->
			<class>shoutclient</class>
			<!-- Just a test stream, visit http://www.fluendo.com -->
   			<url>http://mirror.fluendo.com:8800</url>
   			<checksummer>
				<!-- the checksum each packet, 
					must be compatible the listener node validator configuration -->
   				<class>digest</class>
   			</checksummer>
  		</receiver>
  		<players>
   			<player>
   				<!-- accept http clients on the port 8000 -->
   				<class>http</class>
    			<listenaddress>
    				<port>8000</port>
    			</listenaddress>
   			</player>
  		</players>
	</node>
</freecast>
